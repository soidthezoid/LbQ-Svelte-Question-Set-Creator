{
	"compilerOptions": {
		"strict": true,
		"noEmitOnError": true,
		"removeComments": true,
		"baseUrl": "..",
		"paths": {},
		"rootDirs": ["..", "./types"],
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"preserveValueImports": true,
		"lib": ["esnext", "DOM"],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext"
	},
	"include": ["../src/**/*.js", "../src/**/*.ts", "../src/**/*.svelte"],
	"exclude": ["../node_modules/**", "./**"]
}
